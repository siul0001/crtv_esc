---
import Logo from "../assets/Logo.svg";
---

<head>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Francois+One&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet" />
</head>
<header class="header">
  <nav class="nav">
    <a href="#" class="nav-link">EXPLORE</a>

    <a href="/" class="logo">
      <img src={Logo.src} alt="CRTV ESC logo" />
    </a>

    <a href="#" class="nav-link">ABOUT US</a>
  </nav>
</header>

<style>
  a {
    font-family: "francois one";
  }

  .header {
    background: #ffffff;
    padding: 1rem 2rem;
  }

  .nav {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .nav-link {
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 600;
    color: #000;
    text-decoration: none;
    font-size: 0.9rem;
  }

  .logo img {
    height: 32px;
    display: block;
  }
</style>
