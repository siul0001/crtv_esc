---
const { label, color = "blue", href = "#" } = Astro.props;
---

<a href={href} class={`btn ${color}`}>
  {label}
</a>

<style>
  a {
    font-family: "francois one";
  }

  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    font-weight: 600;
    text-decoration: none;
    color: white;
    max-width: 150px;
    min-width: 150px;
    text-align: center;
  }
  .purple {
    background-color: #b982e7;
  }
  .grey {
    background-color: #a1a1a1;
  }
</style>
